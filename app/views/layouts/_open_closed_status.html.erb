<div id="current-status">
	<div class="text align center">
		<% if open_right_now_weekday? || open_right_now_saturday? %>
        <span>We're open right now <%= link_to "Give us a call!", "tel:7734341515", :class => "button tiny", :style => "background-color:rgb(29, 155, 61);" %></span>
    <% else %>
        <span>We're closed right now, but you can <%= link_to "leave us a message.", contact_path, :class => "button tiny", :style => "background-color:rgb(191, 162, 31);" %></span>
    <% end %>
	</div>
	<script>
    $(document).ready(function () {
        $('div#current-status').headshrinker({"shrinkMenu": false});
		});
</script>
</div>
